<article class="recipe-detail">
    <img src="{{recipe.image}}" alt="Spaghetti Carbonara">
    <h2>{{recipe.title}}</h2>
    <p>{{recipe.description}}</p>

    <h3>-----------------------------------------------------</h3>

    <h3>Ingredients:</h3>
    <p>{{recipe.ingredients}}</p>

    <h3>-----------------------------------------------------</h3>

    <h3>Instructions:</h3>
    <p>{{recipe.instructions}}</p>

    <h3>-----------------------------------------------------</h3>

    <h3>People Who Recommend: {{recipe.recommendList.length}}</h3>
</article>
{{#if user}}
<div class="command">
    {{#if recipe.isOwner}}
    <a href="/edit/{{recipe._id}}">Edit</a>
    <a href="/delete/{{recipe._id}}">Delete</a>
    {{else}}
    {{#if recipe.noRecommend}}
    <a href="/recommend/{{recipe._id}}">Recommend</a>
    {{else}}
    <p>You've already recommended this recipe!</p>
    {{/if}}
    {{/if}}
</div>

{{/if}}