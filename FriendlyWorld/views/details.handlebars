<main class="details">
    <!-- Details page -->
    <section id="details">
        <div id="details-wrapper">
            <p id="details-title">Name: {{model.name}}</p>
            <div id="img-wrapper">
                <img src="{{model.image}}" />
            </div>
            <div id="info-wrapper">
                <table>
                    <tr>
                        <td>
                            <p>
                                Years: <span id="details-years">{{model.years}}</span>
                            </p>
                        </td>
                        <td>
                            <p>Kind: <span id="details-kind">{{model.kind}}</span></p>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <p>Need of: <span id="details-need">{{model.need}}</span></p>
                        </td>
                        <td>
                            <p>Location: <span id="details-location">{{model.location}}</span></p>
                        </td>
                    </tr>
                </table>
                <p>Description: <span id="details-description">{{model.description}}</span></p>
            </div>

            <!--Edit and Delete are only for creator-->
            <div id="action-buttons">
                {{#if user}}
                {{#if model.isOwner}}
                <a href="/edit/{{model._id}}" id="edit-btn">Edit</a>
                <a href="/delete/{{model._id}}" id="delete-btn">Delete</a>
                {{else}}
                {{#if model.notDonated}}
                <a href="/donation/{{model._id}}" id="donation-btn">Donation</a>
                {{else}}
                <p id="already-donated">You already donated!</p>
                {{/if}}
                {{/if}}
                {{/if}}
            </div>
        </div>
    </section>
</main>