<main class="create">
    <!-- Create Page (Only for logged-in users) -->
    <section id="create">
        <div class="form">
            <h2>Add item</h2>
            <form class="create-form" method="post">
                <input type="text" name="name" id="name" placeholder="Name" {{#if values.name}} value="{{values.name}}" {{/if}} />
                <input type="text" name="years" id="years" placeholder="Years"{{#if values.years}} value="{{values.years}}" {{/if}} />
                <input type="text" name="kind" id="kind" placeholder="Kind"{{#if values.kind}} value="{{values.kind}}" {{/if}} />
                <input type="text" name="image" id="animal-img" placeholder="Image url" {{#if values.image}} value="{{values.image}}" {{/if}} />
                <input type="text" name="need" id="needs-of" placeholder="Needs of" {{#if values.need}} value="{{values.need}}" {{/if}}/>
                <input type="text" name="location" id="location" placeholder="Location" {{#if values.location}} value="{{values.location}}" {{/if}}/>
                <textarea id="description" placeholder="Description..." name="description">{{#if values.description}}{{values.description}}{{/if}}</textarea>
                <button type="submit">Post</button>
            </form>
        </div>
    </section>
</main>