<section id="edit-page">
    <div class="editSection">
        <div class="info">
            <h2>"I've Always Wanted To Use That Spell."</h2>
        </div>

        <form method="post" class="editForm">
            <h2>Edit Post</h2>
                  <ul class="noBullet">
                <li>
                    <label for="title">Name:</label>
                    <input type="text" class="inputFields" id="name" placeholder="Delphini" name="name" {{#if creature.name}}value="{{creature.name}}"{{/if}} />
                </li>
                <li>
                    <label for="key-word">Species:</label>
                    <input type="text" class="inputFields" id="species" placeholder="Human" name="spicies" {{#if creature.spicies}}value="{{creature.spicies}}"{{/if}} />
                </li>
                <li>
                    <label for="skin">Skin Colour:</label>
                    <input type="text" class="inputFields" id="skin" placeholder="Black" name="skinColor" {{#if creature.skinColor}}value="{{creature.skinColor}}"{{/if}}  />
                </li>
                <li>
                    <label for="date">Eye Colour:</label>
                    <input type="text" class="inputFields" id="eye" placeholder="Black" name="eyeColor" {{#if creature.eyeColor}}value="{{creature.eyeColor}}"{{/if}}  />
                </li>
                <li>
                    <label for="image">Creature Image:</label>
                    <input type="text" class="inputFields" id="image" placeholder="http:/..." name="image"  {{#if creature.image}}value="{{creature.image}}"{{/if}} />
                </li>
                <li>
                    <label for="description">Description:</label>
                    <textarea id="description" class="inputFields" name="description" placeholder="Creature...">{{#if creature.description}}{{creature.description}}{{/if}} </textarea>
                </li>
                <li id="center-btn">
                    <button id="create-btn">Create</button>
                </li>
            </ul>
        </form>

    </div>
</section>