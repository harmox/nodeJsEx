<section id="create-page">
    <div class="createSection">
        <div class="info">
            <h2>"Dobby Never Meant To Kill! Dobby Only Meant to Maim, or Seriously Injure."</h2>
        </div>

        <form method="post" class="createForm">
            <h2>Create Post</h2>
            <ul class="noBullet">
                <li>
                    <label for="title">Name:</label>
                    <input type="text" class="inputFields" id="name" placeholder="Delphini" name="name" {{#if values.name}}value="{{values.name}}"{{/if}} />
                </li>
                <li>
                    <label for="key-word">Species:</label>
                    <input type="text" class="inputFields" id="species" placeholder="Human" name="spicies" {{#if values.spicies}}value="{{values.spicies}}"{{/if}} />
                </li>
                <li>
                    <label for="skin">Skin Colour:</label>
                    <input type="text" class="inputFields" id="skin" placeholder="Black" name="skinColor" {{#if values.skinColor}}value="{{values.skinColor}}"{{/if}}  />
                </li>
                <li>
                    <label for="date">Eye Colour:</label>
                    <input type="text" class="inputFields" id="eye" placeholder="Black" name="eyeColor" {{#if values.eyeColor}}value="{{values.eyeColor}}"{{/if}}  />
                </li>
                <li>
                    <label for="image">Creature Image:</label>
                    <input type="text" class="inputFields" id="image" placeholder="http:/..." name="image"  {{#if values.image}}value="{{values.image}}"{{/if}} />
                </li>
                <li>
                    <label for="description">Description:</label>
                    <textarea id="description" class="inputFields" name="description" placeholder="Creature...">{{#if values.description}}{{values.description}}{{/if}} </textarea>
                </li>
                <li id="center-btn">
                    <button id="create-btn">Create</button>
                </li>
            </ul>
        </form>

    </div>
</section>