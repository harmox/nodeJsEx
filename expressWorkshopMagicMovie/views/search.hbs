<section id="search">
    <h1>Search</h1>
    <form method="get" class="form">
        <input type="text" class="search" name="title" placeholder="Title...">
        <input type="text" name="genre" class="genre" placeholder="Genre...">
        <input type="number" name="year" class="year" placeholder="Year...">
        <input type="submit" value="search">
    </form>
</section>

<section id="catalog">
    <h1>All Movies</h1>
    <div class="band">
        {{#each data}}
        {{> dataa}}
        {{else}}
        <div class="no-posts">
            <p class="no-offer">There are no posts yet...</p>
        </div>
        {{/each}}
    </div>
</section>